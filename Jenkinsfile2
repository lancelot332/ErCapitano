pipeline {
    agent any
    environment {
        KUBECONFIG = "/var/jenkins_home/.kube/config" // Percorso al file kubeconfig nel container Jenkins
    }
    stages {
        stage('Clone Chart Repository') {
            steps {
                git branch: 'develop', url: 'https://github.com/<ErCapitano>/charts.git'
            }
        }
        stage('Helm Install') {
            steps {
                sh '''
                helm upgrade --install flask-app ./charts/charts \
                  --namespace formazione-sou \
                  --set image.tag=develop
                '''
            }
        }
    }
}
