pipeline {
    agent any
    environment {
        KUBECONFIG = "/root/.kube/config" // Percorso al file kubeconfig nel container Jenkins
    }
    stages {
        stage('Clone Chart Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/<your-repo>/charts.git'
            }
        }
        stage('Helm Install') {
            steps {
                sh '''
                helm upgrade --install my-app ./charts/my-chart \
                  --namespace formazione-sou \
                  --set image.tag=latest
                '''
            }
        }
    }
}
